{
    
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
    
            "name": "Cortex Debug",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "D:/Program Files (x86)/GNU Arm Embedded Toolchain/10 2021.10/bin/arm-none-eabi-gdb.exe",
            "targetArchitecture": "arm",
            "program": "./nucleo-f413zh.hex",
            "setupCommands": [
                {
    
                    "text": "file './nucleo-f413zh.hex'"
                },
                {
    
                    "text": "target remote localhost:3333"
                },
                {
    
                    "text": "monitor reset"
                },
                {
    
                    "text": "monitor halt"
                },
                {
    
                    "text": "load"
                }
            ],
            //"preLaunchTask": "build",
            //"launchCompleteCommand": "None",
            //"externalConsole": true,
            "cwd": "${workspaceRoot}"
        },
        {
    
            "name": "Debug (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "./nucleo-f413zh.hex",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F4",
            "runToMain": true,
            "configFiles": [
                "cmsis-dap.cfg",
                "stm32f4x.cfg"
            ],
            "debugServer": 3333
        }
    ]
}